# Backup Service Dockerfile
FROM alpine:latest

# Install backup tools
RUN apk add --no-cache \
    postgresql-client \
    redis \
    curl \
    bash \
    && rm -rf /var/cache/apk/*

# Create backup directory
RUN mkdir -p /backups

# Copy backup scripts
COPY scripts/backup.sh /usr/local/bin/backup.sh
RUN chmod +x /usr/local/bin/backup.sh

# Create non-root user
RUN addgroup -g 1001 -S backup \
    && adduser -S backup -u 1001 -G backup \
    && chown -R backup:backup /backups

USER backup

# Health check (Improved: checks if the script is executable and present)
HEALTHCHECK --interval=60s --timeout=10s --start-period=30s --retries=3 \
    CMD test -x /usr/local/bin/backup.sh || exit 1

# Default command
CMD ["/usr/local/bin/backup.sh"]