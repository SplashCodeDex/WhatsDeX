# WhatsDeX Complete SaaS Production Environment
# Persistent Sessions + Web QR Code + Full Multi-tenant

# Environment
NODE_ENV=production
PORT=3000
WEB_PORT=3001
HOST=0.0.0.0

# Database Configuration (PostgreSQL for SaaS)
DATABASE_URL="postgresql://whatsdex_user:whatsdex_secure_2024@localhost:5432/whatsdex_saas"

# Redis for Sessions & Cache (CRITICAL for persistence)
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# WhatsApp Session Persistence (KEY FOR SAAS!)
WHATSAPP_SESSION_PATH="./sessions"
PERSIST_SESSIONS=true
AUTO_RECONNECT=true
SESSION_BACKUP_ENABLED=true
SESSION_BACKUP_INTERVAL=300000
MAX_RECONNECT_ATTEMPTS=10

# Multi-tenant Configuration
MULTITENANT_ENABLED=true
MAX_BOTS_PER_USER=5
DEFAULT_PLAN="free"
ENABLE_SUBDOMAIN_BOTS=true

# Web Dashboard Configuration
WEB_QR_ENABLED=true
WEB_QR_REFRESH_INTERVAL=30000
WEB_PAIRING_CODE_ENABLED=true
AUTO_QR_DISPLAY=true
QR_CODE_TTL=60000

# Authentication & Security
JWT_SECRET="prod_jwt_7a8b9c0d1e2f3a4b5c6d7e8f9a0b1c2d"
JWT_EXPIRES_IN="7d"
SESSION_SECRET="prod_session_1a2b3c4d5e6f7a8b9c0d1e2f3a4b5c6d"
BCRYPT_ROUNDS=12

# AI Services
GOOGLE_GEMINI_API_KEY="your_gemini_key_here"
OPENAI_API_KEY="your_openai_key_here"
ANTHROPIC_API_KEY="your_claude_key_here"

# Payment Processing
STRIPE_SECRET_KEY="sk_live_your_stripe_key"
STRIPE_PUBLISHABLE_KEY="pk_live_your_stripe_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Email Service
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="noreply@yourdomain.com"
SMTP_PASS="your_app_password"

# File Storage (for persistent media)
STORAGE_TYPE="local"
UPLOAD_PATH="./uploads"
MAX_FILE_SIZE=52428800

# Monitoring & Analytics
ANALYTICS_ENABLED=true
SENTRY_DSN="your_sentry_dsn"
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# Security
CORS_ORIGINS="http://localhost:3001,https://yourdomain.com"
TRUST_PROXY=true

# Backup & Recovery
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# WebSocket for Real-time Updates
WEBSOCKET_ENABLED=true
WEBSOCKET_PATH="/socket.io"

# Bot Configuration
BOT_NAME="WhatsDeX SaaS"
BOT_PREFIX="!"
BOT_DESCRIPTION="AI-Powered WhatsApp Bot Platform"
OWNER_NUMBER="your_whatsapp_number"

# Feature Flags
ENABLE_AI_CHAT=true
ENABLE_MEDIA_PROCESSING=true
ENABLE_DOWNLOADERS=true
ENABLE_GAMES=true
ENABLE_PREMIUM_FEATURES=true
ENABLE_VOICE_MESSAGES=true
ENABLE_STICKERS=true

# Performance
WORKER_PROCESSES=2
MAX_MEMORY_USAGE="2GB"
CLEANUP_INTERVAL=3600000

# Development Tools (disable in production)
DEBUG_MODE=false
ENABLE_SWAGGER=false
ENABLE_PLAYGROUND=false