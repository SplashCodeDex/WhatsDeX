# Multi-tenant WhatsDeX SaaS Configuration

# Database
DATABASE_URL="postgresql://CodeDeX:YOUR_DATABASE_PASSWORD@YOUR_DATABASE_HOST:5432/whatsdex"
SHADOW_DATABASE_URL="postgresql://CodeDeX:YOUR_DATABASE_PASSWORD@YOUR_DATABASE_HOST:5432/whatsdx_shadow"

# Authentication
JWT_SECRET="YOUR_JWT_SECRET"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_SECRET="YOUR_JWT_REFRESH_SECRET"
JWT_REFRESH_EXPIRES_IN="30d"

# Stripe Payment Processing
STRIPE_SECRET_KEY="YOUR_STRIPE_SECRET_KEY"
STRIPE_WEBHOOK_SECRET="YOUR_STRIPE_WEBHOOK_SECRET"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="YOUR_STRIPE_PUBLISHABLE_KEY"

# Super Admin Access
SUPER_ADMIN_EMAIL="admin@yourdomain.com"
SUPER_ADMIN_PASSWORD="YOUR_SUPER_ADMIN_PASSWORD"

# Application URLs
NEXT_PUBLIC_APP_URL="YOUR_APP_URL"
NEXT_PUBLIC_API_URL="YOUR_API_URL"

# Email Configuration (Optional)
SMTP_HOST="YOUR_SMTP_HOST"
SMTP_PORT="YOUR_SMTP_PORT"
SMTP_USER="YOUR_SMTP_USER"
SMTP_PASS="YOUR_SMTP_PASSWORD"
FROM_EMAIL="noreply@yourdomain.com"

# Redis (Optional - for caching and sessions)
REDIS_URL="redis://YOUR_REDIS_USERNAME:YOUR_REDIS_PASSWORD@YOUR_REDIS_HOST:YOUR_REDIS_PORT"
REDIS_USERNAME="YOUR_REDIS_USERNAME"
REDIS_HOST="YOUR_REDIS_HOST"
REDIS_PORT="YOUR_REDIS_PORT"
REDIS_PASSWORD="YOUR_REDIS_PASSWORD"
REDIS_TLS="false"

# Analytics (Optional)
GOOGLE_ANALYTICS_ID="YOUR_GOOGLE_ANALYTICS_ID"

# Security
NEXTAUTH_SECRET="YOUR_NEXTAUTH_SECRET_KEY"
NEXTAUTH_URL="YOUR_NEXTAUTH_URL"

# Rate Limiting
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="15"

# File Upload
MAX_FILE_SIZE="10485760"
UPLOAD_PATH="./uploads"

# Feature Flags
ENABLE_REGISTRATIONS="true"
ENABLE_AI_FEATURES="true"
ENABLE_PAYMENTS="true"
ENABLE_ANALYTICS="true"

# Development
NODE_ENV="development"
DEBUG="true"
