# WhatsDeX SaaS - Unified Configuration
# Copy this file to .env and fill in the values

# ==============================================
# CORE INFRASTRUCTURE (Database & Redis)
# ==============================================
# PostgreSQL Database URL (Prisma)
DATABASE_URL="postgresql://whatsdex:whatsdex_secure@localhost:5432/whatsdex_saas?schema=public"

# Redis Connection (Queue & Caching)
REDIS_URL="redis://localhost:6379"
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""

# ==============================================
# API SERVICE (@whatsdex/api)
# ==============================================
PORT=3000
API_URL="http://localhost:3000"
NODE_ENV="development" # development, production, test

# Authentication (JWT)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRY="7d"

# Encryption (for sensitive bot data)
ENCRYPTION_KEY="32-char-random-string-for-aes-256-gcm"

# ==============================================
# WEB DASHBOARD (@whatsdex/web)
# ==============================================
NEXT_PUBLIC_API_URL="http://localhost:3000"
NEXT_PUBLIC_APP_URL="http://localhost:3001"

# ==============================================
# BOT SERVICE (@whatsdex/bot)
# ==============================================
BOT_PORT=3002
# Max bots per instance (scaling)
MAX_BOTS_PER_INSTANCE=100

# ==============================================
# EXTERNAL SERVICES (Payments & AI)
# ==============================================
# Stripe (Payments)
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."

# Google Gemini (AI Features)
GOOGLE_GEMINI_API_KEY="AIzaSy..."

# ==============================================
# MULTI-TENANCY & LIMITS
# ==============================================
MULTITENANT_ENABLED=true
FREE_TIER_BOT_LIMIT=1
PREMIUM_TIER_BOT_LIMIT=5
