# WhatsDeX Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL="file:./dev.db"

# Server Configuration
NODE_ENV="development"
PORT=3000
ADMIN_PORT=3001
HOST="localhost"

# JWT Configuration - CHANGE THESE IN PRODUCTION!
JWT_SECRET="CHANGE_THIS_TO_A_RANDOM_64_CHARACTER_STRING"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_SECRET="CHANGE_THIS_TO_A_DIFFERENT_RANDOM_64_CHARACTER_STRING"
JWT_REFRESH_EXPIRES_IN="30d"

# Session Configuration - CHANGE THIS IN PRODUCTION!
SESSION_SECRET="CHANGE_THIS_TO_ANOTHER_RANDOM_64_CHARACTER_STRING"
SESSION_MAX_AGE=86400000

# Frontend Configuration
FRONTEND_URL="http://localhost:3001"
ADMIN_URL="http://localhost:3001/admin"

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"

# API Keys Configuration - GET THESE FROM RESPECTIVE SERVICES
OPENAI_API_KEY="your-openai-api-key-here"
GOOGLE_GEMINI_API_KEY="your-google-gemini-api-key-here"
STRIPE_SECRET_KEY="your-stripe-secret-key-here"
STRIPE_WEBHOOK_SECRET="your-stripe-webhook-secret-here"
STRIPE_PUBLISHABLE_KEY="your-stripe-publishable-key-here"

# External Services (Optional)
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""
SENTRY_DSN="your-sentry-dsn-here"
FIREBASE_PROJECT_ID=""
FIREBASE_PRIVATE_KEY=""
FIREBASE_CLIENT_EMAIL=""

# Email Configuration (Optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER=""
SMTP_PASS=""
FROM_EMAIL="noreply@whatsdex.com"

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH="./uploads"
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,video/mp4,audio/mpeg"

# Analytics & Monitoring
ANALYTICS_ENABLED=false
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
LOG_LEVEL="info"

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_PATH="./backups"

# WhatsApp Configuration
WHATSAPP_SESSION_TIMEOUT=3600000
WHATSAPP_MAX_RECONNECT_ATTEMPTS=5
WHATSAPP_RECONNECT_INTERVAL=5000

# Bot Configuration
BOT_MODE="public"
BOT_PREFIX="^[°•π÷×¶∆£¢€¥®™+✓_=|/~!?@#%^&.©^]"
BOT_MAX_COMMANDS_PER_MINUTE=60
BOT_COOLDOWN_MS=10000

# Premium Features
PREMIUM_ENABLED=true
PREMIUM_PRICE_MONTHLY=4.99
PREMIUM_PRICE_YEARLY=49.99
PREMIUM_CURRENCY="USD"

# Plugin System
PLUGINS_ENABLED=true
PLUGINS_PATH="./plugins"
MAX_PLUGINS_PER_USER=10

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Rate Limiting
GLOBAL_RATE_LIMIT_ENABLED=true
GLOBAL_RATE_LIMIT_WINDOW_MS=60000
GLOBAL_RATE_LIMIT_MAX_REQUESTS=100

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="Bot is under maintenance. Please try again later."

# Debug Configuration
DEBUG_MODE=false
DEBUG_DATABASE_QUERIES=false
DEBUG_API_REQUESTS=false