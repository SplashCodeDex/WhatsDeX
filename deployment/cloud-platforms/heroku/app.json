{
  "name": "WhatsDeX AI Bot",
  "description": "Advanced WhatsApp AI Bot with conversational intelligence and analytics",
  "repository": "https://github.com/yourusername/WhatsDeX",
  "logo": "https://your-logo-url.com/logo.png",
  "keywords": [
    "whatsapp",
    "bot",
    "ai",
    "chatbot",
    "automation",
    "analytics",
    "node.js"
  ],
  "website": "https://whatsdx.yourdomain.com",
  "success_url": "/api/health",
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    },
    "worker": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql:basic",
      "as": "DATABASE"
    },
    {
      "plan": "heroku-redis:basic",
      "as": "REDIS"
    },
    {
      "plan": "papertrail:choklad",
      "as": "PAPERTRAIL"
    },
    {
      "plan": "newrelic:wayne",
      "as": "NEWRELIC"
    }
  ],
  "buildpacks": [
    {
      "url": "https://github.com/heroku/heroku-buildpack-nodejs"
    }
  ],
  "env": {
    "NODE_ENV": {
      "description": "Node.js environment",
      "value": "production",
      "required": true
    },
    "AI_INTELLIGENCE_MODE": {
      "description": "Enable AI intelligence features",
      "value": "true",
      "required": true
    },
    "ANALYTICS_ENABLED": {
      "description": "Enable analytics and monitoring",
      "value": "true",
      "required": true
    },
    "HEROKU_DEPLOYMENT": {
      "description": "Indicates Heroku deployment",
      "value": "true",
      "required": true
    },
    "GEMINI_API_KEY": {
      "description": "Google Gemini API key for AI features",
      "required": true
    },
    "META_AI_KEY": {
      "description": "Meta AI API key (optional)",
      "required": false
    },
    "OPENAI_API_KEY": {
      "description": "OpenAI API key for DALL-E and other features",
      "required": false
    },
    "JWT_SECRET": {
      "description": "JWT secret for authentication (minimum 32 characters)",
      "generator": "secret"
    },
    "NEXTAUTH_SECRET": {
      "description": "NextAuth secret for web dashboard authentication",
      "generator": "secret"
    },
    "BOT_NAME": {
      "description": "Name of the WhatsApp bot",
      "value": "WhatsDeX AI Assistant",
      "required": false
    },
    "YOUTUBE_API_KEY": {
      "description": "YouTube Data API key for video downloads",
      "required": false
    },
    "WEATHER_API_KEY": {
      "description": "Weather API key for weather commands",
      "required": false
    },
    "CORS_ORIGINS": {
      "description": "Allowed CORS origins for API access",
      "value": "*",
      "required": false
    },
    "LOG_LEVEL": {
      "description": "Logging level",
      "value": "info",
      "required": false
    }
  },
  "scripts": {
    "postdeploy": "npm run heroku:setup"
  },
  "stack": "heroku-22",
  "image": "heroku/nodejs"
}