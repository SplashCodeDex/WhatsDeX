{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "services": {
    "whatsdx-bot": {
      "name": "WhatsDeX AI Bot",
      "source": {
        "type": "local"
      },
      "variables": {
        "NODE_ENV": "production",
        "AI_INTELLIGENCE_MODE": "true",
        "ANALYTICS_ENABLED": "true",
        "RAILWAY_DEPLOYMENT": "true",
        "PORT": "$PORT",
        "OWNER_NUMBER": "$OWNER_NUMBER",
          "STRIPE_SECRET_KEY": "$STRIPE_SECRET_KEY",
          "STRIPE_WEBHOOK_SECRET": "$STRIPE_WEBHOOK_SECRET"
      },
      "domains": [
        {
          "domain": "whatsdx-api.railway.app"
        }
      ],
      "build": {
        "command": "npm install && npm run generate && npm run build"
      },
      "start": {
        "command": "npm start"
      },
      "healthcheck": {
        "path": "/health",
        "timeout": 30,
        "interval": 60
      },
      "scaling": {
        "min": 1,
        "max": 3,
        "cpuThreshold": 80,
        "memoryThreshold": 80
      }
    },
    "whatsdx-web": {
      "name": "WhatsDeX Dashboard",
      "source": {
        "type": "local",
        "workdir": "web"
      },
      "variables": {
        "NODE_ENV": "production",
        "NEXT_PUBLIC_API_URL": "https://whatsdx-api.railway.app",
        "RAILWAY_DEPLOYMENT": "true"
      },
      "domains": [
        {
          "domain": "whatsdx-dashboard.railway.app"
        }
      ],
      "build": {
        "command": "npm install && npm run build"
      },
      "start": {
        "command": "npm start"
      },
      "healthcheck": {
        "path": "/api/health",
        "timeout": 30,
        "interval": 60
      }
    }
  },
  "plugins": {
    "postgresql": {
      "name": "PostgreSQL Database",
      "plan": "hobby",
      "variables": {
        "POSTGRES_DB": "whatsdx_production",
        "POSTGRES_USER": "whatsdx_user"
      }
    },
    "redis": {
      "name": "Redis Cache",
      "plan": "hobby",
      "variables": {
        "REDIS_URL": "$REDIS_URL"
      }
    }
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "LOG_LEVEL": "info"
      }
    },
    "staging": {
      "variables": {
        "NODE_ENV": "staging",
        "LOG_LEVEL": "debug"
      }
    }
  }
}