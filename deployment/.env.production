# Production Environment Configuration for WhatsDeX AI Bot

# ===========================================
# Application Configuration
# ===========================================
NODE_ENV=production
PORT=3000
APP_NAME=WhatsDeX-AI-Bot
APP_VERSION=2.0.0

# ===========================================
# AI Intelligence Configuration
# ===========================================
AI_INTELLIGENCE_MODE=true
ANALYTICS_ENABLED=true

# Gemini AI (Primary)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro
GEMINI_MAX_TOKENS=8192

# Meta AI (Fallback)
META_AI_KEY=your_meta_ai_key_here

# DeepSeek AI (Alternative)
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# OpenAI (for DALL-E)
OPENAI_API_KEY=your_openai_api_key_here

# ===========================================
# Database Configuration
# ===========================================
# PostgreSQL (Primary Database)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=whatsdex_production
POSTGRES_USER=whatsdex_user
POSTGRES_PASSWORD=your_secure_postgres_password_here
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ===========================================
# Redis Configuration
# ===========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_USERNAME=default

# ===========================================
# Security Configuration
# ===========================================
# JWT Secrets
JWT_SECRET=your_very_secure_jwt_secret_minimum_32_characters
NEXTAUTH_SECRET=your_nextauth_secret_for_web_dashboard_auth

# Session Security
SESSION_SECRET=your_session_secret_for_web_sessions

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# External API Keys
# ===========================================
# YouTube Data API
YOUTUBE_API_KEY=your_youtube_api_key_here

# Weather API
WEATHER_API_KEY=your_weather_api_key_here

# Google Search API
GOOGLE_SEARCH_API_KEY=your_google_search_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_google_search_engine_id_here

# Translation API
TRANSLATE_API_KEY=your_translation_api_key_here

# ===========================================
# Cloud Storage (for backups and media)
# ===========================================
# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
BACKUP_S3_BUCKET=whatsdx-backups

# ===========================================
# Monitoring & Analytics
# ===========================================
# Grafana
GRAFANA_PASSWORD=your_secure_grafana_password

# Sentry (Error Tracking)
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# Analytics
ANALYTICS_RETENTION_DAYS=90
ANALYTICS_EXPORT_ENABLED=true

# ===========================================
# WhatsApp Bot Configuration
# ===========================================
# Bot Settings
BOT_NAME=WhatsDeX AI Assistant
BOT_PREFIX=!
BOT_OWNER=your_whatsapp_number_here

# Multi-device support
WHATSAPP_SESSION_ID=whatsdx_production
WHATSAPP_AUTO_RECONNECT=true
WHATSAPP_RECONNECT_ATTEMPTS=10

# ===========================================
# Performance Configuration
# ===========================================
# Node.js Performance
NODE_OPTIONS=--max-old-space-size=4096
UV_THREADPOOL_SIZE=16

# Worker Configuration
WORKER_CONCURRENCY=5
MESSAGE_QUEUE_CONCURRENCY=10

# Cache Configuration
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000

# ===========================================
# Logging Configuration
# ===========================================
LOG_LEVEL=info
LOG_FILE_PATH=/app/logs/whatsdx.log
LOG_MAX_FILES=7
LOG_MAX_SIZE=100m

# ===========================================
# Domain and SSL Configuration
# ===========================================
DOMAIN=yourdomain.com
API_DOMAIN=api.yourdomain.com
WEB_DOMAIN=dashboard.yourdomain.com

# SSL Certificate paths (if using custom certificates)
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem

# ===========================================
# Backup Configuration
# ===========================================
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key_here

# ===========================================
# Email Configuration (for notifications)
# ===========================================
SMTP_HOST=smtp.yourmailprovider.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASSWORD=your_smtp_password
EMAIL_FROM=noreply@yourdomain.com

# Admin notification email
ADMIN_EMAIL=admin@yourdomain.com

# ===========================================
# Development & Debug (set to false in production)
# ===========================================
DEBUG_MODE=false
VERBOSE_LOGGING=false
ENABLE_DEBUG_ENDPOINTS=false

# ===========================================
# Feature Flags
# ===========================================
ENABLE_WEB_DASHBOARD=true
ENABLE_API_DOCUMENTATION=true
ENABLE_HEALTH_CHECKS=true
ENABLE_METRICS_COLLECTION=true
ENABLE_AUTO_UPDATES=false

# ===========================================
# Scaling Configuration
# ===========================================
# Auto-scaling
ENABLE_HORIZONTAL_SCALING=false
MIN_INSTANCES=1
MAX_INSTANCES=3

# Load balancing
ENABLE_LOAD_BALANCER=true
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# ===========================================
# Security Headers and CORS
# ===========================================
CORS_ORIGINS=https://yourdomain.com,https://dashboard.yourdomain.com
CORS_CREDENTIALS=true

# Security headers
ENABLE_HELMET=true
ENABLE_RATE_LIMITING=true
ENABLE_DDOS_PROTECTION=true